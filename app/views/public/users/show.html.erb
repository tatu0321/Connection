<div class="container mt-4">
  <div class="row">
    <!-- 左カラム: 会員情報 -->
    <div class="col-md-4">
      <div class="card">
        <div class="card-header">
          会員情報
        </div>
        <div class="card-body">
          <p><strong>名前:</strong> <%= @user.name %></p>
          <p><strong>メールアドレス:</strong> <%= @user.email %></p>
          <p><strong>登録日:</strong> <%= @user.created_at.strftime("%Y-%m-%d") %></p>
        </div>
      </div>
    </div>

    <!-- 右カラム: 投稿一覧 -->
    <div class="col-md-8">
      <h3>投稿一覧</h3>
      <ul class="list-group">
        <% @posts.each do |post| %>
          <li class="list-group-item">
            <%= link_to truncate(post.content, length: 50), post_path(post), class: "text-decoration-none" %>
            <small class="text-muted d-block">投稿日時: <%= post.created_at.strftime("%Y-%m-%d %H:%M") %></small>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
