<div class="container mypage-container">
  <div class="row">
    <!-- 左側のユーザー情報 -->
    <div class="col-md-4">
      <div class="card user-info">
        <div class="card-body text-center">
          <% if @user.avatar.attached? %>
            <%= image_tag @user.avatar, class: "profile-image img-fluid rounded-circle mb-3", size: "150x150" %>
          <% else %>
            <%= image_tag "no_image.jpg", class: "profile-image img-fluid rounded-circle mb-3", size: "150x150" %>
          <% end %>
          <h3 class="card-title"><%= @user.name %></h3>
          <p class="card-text text-muted"><%= @user.introduction.presence || "自己紹介はまだ登録されていません。" %></p>

        </div>
      </div>
    </div>

    <!-- 右側の投稿一覧 -->
    <div class="col-md-8">
      <% if @posts.any? %>
        <% @posts.each do |post| %>
          <div class="card post-card mb-3">
            <div class="card-body">
              <p class="card-text"><%= post.content %></p>
              <small class="text-muted">
                投稿日時: <%= post.created_at.strftime("%Y-%m-%d %H:%M") %>
              </small>
            </div>
          </div>
        <% end %>
      <% else %>
        <div class="alert alert-info" role="alert">
          投稿がまだありません。
        </div>
      <% end %>
    </div>
  </div>
</div>
