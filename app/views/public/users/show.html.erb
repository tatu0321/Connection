<div class="container my-5">
  <h1 class="mb-4">マイページ</h1>

  <div class="card">
    <div class="card-body">
      <h3 class="card-title"><%= @user.name %>さんのプロフィール</h3>
      <p><strong>メールアドレス:</strong> <%= @user.email %></p>
      <!-- 他のユーザー情報もここに追加可能 -->

      <h4 class="mt-4">投稿一覧</h4>
      <ul class="list-group">
        <% @posts.each do |post| %>
          <li class="list-group-item">
            <%= link_to post.title, public_post_path(post) %>
            <small class="text-muted">投稿日時: <%= post.created_at.strftime("%Y-%m-%d %H:%M") %></small>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
