<div class="container vh-100 d-flex align-items-center justify-content-center">
  <div class="row justify-content-center w-100">
    <div class="col-lg-6 col-md-8 col-sm-10 col-12">
      <div class="card shadow">
        <div class="card-body">
          <h2 class="text-center mb-4 text-primary">Sign Up</h2>
          
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "needs-validation", novalidate: true }) do |f| %>
            <%# エラーメッセージ表示用 %>
            <%= render "public/users/shared/error_messages", resource: resource %>

            <div class="mb-3">
              <%= f.label :name, "アカウント名", class: "form-label" %>
              <%= f.text_field :name, class: "form-control", placeholder: "Your Name", required: true, autofocus: true, autocomplete: "name" %>
            </div>

            <div class="mb-3">
              <%= f.label :email, "Email", class: "form-label" %>
              <%= f.email_field :email, class: "form-control", placeholder: "Your Email", required: true, autofocus: true, autocomplete: "email" %>
            </div>

            <div class="mb-3">
              <%= f.label :password, "Password", class: "form-label" %>
              <% if @minimum_password_length %>
                <em class="small text-muted">(<%= @minimum_password_length %> characters minimum)</em>
              <% end %>
              <%= f.password_field :password, class: "form-control", placeholder: "Your Password", required: true, autocomplete: "new-password" %>
            </div>

            <div class="mb-3">
              <%= f.label :password_confirmation, "Password Confirmation", class: "form-label" %>
              <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Confirm Password", required: true, autocomplete: "new-password" %>
            </div>

            <div class="d-grid">
              <%= f.submit "Sign up", class: "btn btn-primary btn-lg" %>
            </div>
          <% end %>

          <p class="text-center mt-3">
            Already have an account? 
            <%= link_to "Sign In", new_user_session_path, class: "text-decoration-none text-primary" %>
          </p>
        </div>
      </div>
    </div>
  </div>
</div>

