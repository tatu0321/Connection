<% if @post.errors.any? %>
  <div class="alert alert-danger">
    <strong><%= @post.errors.count %>件のエラーが発生しました。</strong>
    <ul>
      <% @post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="container mt-5">
  <h2 class="text-center mb-4">新規投稿</h2>
  <div class="row justify-content-center">
    <div class="col-md-6 col-sm-8 col-10"> <!-- 横幅を狭める -->
      <div class="card shadow p-4">
        <%= form_with model: @post, url: posts_path, method: :post, local: true do |f| %>
          <!-- ジャンル選択 -->
          <div class="mb-3">
            <%= f.label :genre_id, "ジャンル", class: "form-label" %>
            <%= f.collection_select :genre_id, Genre.all, :id, :name, { prompt: "ジャンルを選択してください" }, class: "form-control" %>
          </div>

          <!-- 投稿内容 -->
          <div class="mb-3">
            <%= f.label :content, "投稿内容", class: "form-label" %>
            <%= f.text_area :content, class: "form-control", rows: 10, placeholder: "投稿内容を入力してください" %> <!-- 高さを増やす -->
          </div>

          <!-- 投稿ボタン -->
          <div class="text-center">
            <%= f.submit "投稿する", class: "btn btn-success" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>


