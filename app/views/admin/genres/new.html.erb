<!-- app/views/admin/genres/new.html.erb -->
<div class="container my-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <h2 class="text-center mb-4">新しいジャンルを追加</h2>
      
      <%= form_with(model: @genre, url: admin_genres_path, local: true) do |form| %>
        <% if @genre.errors.any? %>
          <div class="alert alert-danger">
            <h4><%= pluralize(@genre.errors.count, "error") %> prohibited this genre from being saved:</h4>
            <ul>
              <% @genre.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
        
        <div class="mb-3">
          <%= form.label :name, 'ジャンル名', class: 'form-label' %>
          <%= form.text_field :name, class: 'form-control', required: true, placeholder: 'ジャンル名を入力してください' %>
        </div>
        
        <div class="mb-3">
          <%= form.label :color, 'ジャンルカラー', class: 'form-label' %>
          <%= form.color_field :color, class: 'form-control', value: '#42445a' %>
        </div>
        
        <div class="text-center">
          <%= form.submit 'ジャンルを追加', class: 'btn btn-primary' %>
        </div>
        
      <% end %>
    </div>
  </div>
</div>
