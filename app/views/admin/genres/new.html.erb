<div class="container my-5">
  <h3 class="text-center mb-4">新規ジャンル作成</h3>

  <%= form_with model: @genre, url: admin_genres_path, local: true do |f| %>
    <% if @genre.errors.any? %>
      <div class="alert alert-danger">
        <ul>
          <% @genre.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= f.label :name, 'ジャンル名' %>
      <%= f.text_field :name, class: 'form-control', placeholder: 'ジャンル名を入力してください' %>
    </div>

    <%= f.submit '作成', class: 'btn btn-primary mt-3' %>
  <% end %>

  <%= link_to '戻る', admin_genres_path, class: 'btn btn-secondary mt-3' %>
</div>
