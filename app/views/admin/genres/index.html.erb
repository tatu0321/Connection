<div class="container my-5">
  <h3 class="text-center mb-4">ジャンル一覧</h3>
  <%= link_to '新規ジャンル作成', new_admin_genre_path, class: 'btn btn-primary mb-3' %>

  <table class="table table-bordered">
    <thead>
      <tr>
        <th>ジャンル名</th>
        <th>操作</th>
      </tr>
    </thead>
    <tbody>
      <% @genres.each do |genre| %>
        <tr>
          <td><%= genre.name %></td>
          <td>
            <%= link_to '編集', edit_admin_genre_path(genre), class: 'btn btn-warning btn-sm' %>
            <%= link_to '削除', admin_genre_path(genre), method: :delete, data: { confirm: '本当に削除してもよろしいですか？' }, class: 'btn btn-danger btn-sm' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
