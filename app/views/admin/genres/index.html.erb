<div class="container custom-container my-5" style="max-width: 40%; margin: 0 auto;">
  <h3 class="text-center mb-4">ジャンル一覧</h3>
  <%= link_to '新規ジャンル作成', new_admin_genre_path, class: 'btn btn-primary mb-3' %>

   <table class="table table-bordered">
     <thead>
       <tr>
         <th style="width: 50%;">ジャンル名</th>
         <th style="width: 25%;">色</th>
         <th style="width: 25%;">操作</th>
       </tr>
     </thead>
     <tbody>
       <% @genres.each do |genre| %>
         <tr>
           <td><%= genre.name %></td>
           <td>
             <span style="display: inline-block; width: 160px; height: 30px; background-color: <%= genre.color %>;"></span>
           </td>
           <td>
             <%= link_to '編集', edit_admin_genre_path(genre), class: 'btn btn-warning ml-2 mr-3' %>
             <%= link_to '削除', admin_genre_path(genre), method: :delete, data: { confirm: '本当に削除してもよいですか？' }, class: 'btn btn-danger' %>
           </td>
         </tr>
      <% end %>
    </tbody>
  </table>
</div>
