<h1>投稿一覧</h1>
<table>
  <tr>
    <th>投稿内容</th>
    <th>投稿者</th>
    <th>操作</th>
  </tr>
  <% @posts.each do |post| %>
    <tr>
      <td><%= post.content %></td>
      <td><%= post.user.name %></td>
      <td><%= link_to '削除', admin_post_path(post), method: :delete, data: { confirm: '本当に削除しますか？' } %></td>
    </tr>
  <% end %>
</table>
