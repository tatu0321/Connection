<header class="navbar" style="background-color: #53c7ea;">
  <div class="container-fluid">
    <!-- 上段: ロゴとリンク -->
    <div class="row w-100 align-items-center">
      <!-- ロゴ -->
      <div class="col-md-6 d-flex">
        <% if user_signed_in? %>
          <%= link_to "Connection", posts_path, class: "navbar-brand text-white" %>
        <% elsif admin_signed_in? %>
          <%= link_to "Connection", admin_users_path, class: "navbar-brand text-white" %>
        <% else %>
          <%= link_to "Connection", root_path, class: "navbar-brand text-white" %>
        <% end %>
      </div>

      <!-- リンク -->
      <div class="col-md-6 text-end">
        <ul class="navbar-nav d-inline-flex flex-row">
          <% if user_signed_in? %>
            <li class="nav-item mx-2">
              <%= link_to "ホーム", posts_path, class: "nav-link text-white" %>
            </li>
            <li class="nav-item mx-2">
              <%= link_to "マイページ", mypage_path, class: "nav-link text-white" %>
            </li>
            <li class="nav-item mx-2">
              <%= link_to "新規投稿", new_post_path, class: "nav-link text-white" %>
            </li>
            <li class="nav-item mx-2">
              <%= link_to "ブックマーク", favorites_path, class: "nav-link text-white" %>
            </li>
            <li class="nav-item mx-2">
              <%= link_to "About", about_path, class: "nav-link text-white" %>
            </li>
            <li class="nav-item mx-2">
              <%= link_to "Sign out", destroy_user_session_path, method: :delete, class: "nav-link text-white" %>
            </li>
          <% elsif admin_signed_in? %>
            <li class="nav-item mx-2">
              <%= link_to "会員一覧", admin_users_path, class: "nav-link text-white" %>
            </li>
            <li class="nav-item mx-2">
              <%= link_to "投稿一覧", admin_posts_path, class: "nav-link text-white" %>
            </li>
            <li class="nav-item mx-2">
              <%= link_to "ジャンル一覧", admin_genres_path, class: "nav-link text-white" %>
            </li>
            <li class="nav-item mx-2">
              <%= link_to "Sign out", destroy_admin_session_path, method: :delete, class: "nav-link text-white" %>
            </li>
          <% else %>
            <li class="nav-item mx-2">
              <%= link_to "ホーム", root_path, class: "nav-link text-white" %>
            </li>
            <li class="nav-item mx-2">
              <%= link_to "Sign up", new_user_registration_path, class: "nav-link text-white" %>
            </li>
            <li class="nav-item mx-2">
              <%= link_to "Sign in", new_user_session_path, class: "nav-link text-white" %>
            </li>
            <li class="nav-item mx-2">
              <%= link_to "About", about_path, class: "nav-link text-white" %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>

    <!-- 下段: 検索バー -->
    <% if user_signed_in? || admin_signed_in? %>
      <div class="row mt-3">
        <div class="col-12">
          <form action="<%= searches_path %>" method="get" class="d-flex justify-content-end">
            <input type="text" name="q" placeholder="検索" class="form-control me-2 w-50">
            <button type="submit" class="btn btn-outline-light">検索</button>
          </form>
        </div>
      </div>
    <% end %>
  </div>
</header>
